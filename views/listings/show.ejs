<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />

    <div class="card-body">
      <p class="card-text">
        <% if (listing.owner) { %>
        <i>Owner: <b><%= listing.owner.username %></b></i>
        <% } else { %>
        <i>Owner: <b>Unknown</b></i>
        <% } %>
        <br />
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <br />
</div>

<% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
<div class="btns">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1 offset-3 edit-btn"
    >Edit</a
  >

  <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark offset-5 delete-btn">Delete</button>
  </form>
</div>
<% } %>

<hr />
<br />

<div class="col-8 offset-3 mb-3">
  <% if(currUser) { %>
  <h4>‚≠ê Leave a Review</h4>
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="POST"
    class="needs-validation"
    novalidate
  >
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating </label>
      <input
        type="range"
        min="1"
        max="5"
        name="review[rating]"
        id="rating"
        class="form-range"
      />
    </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        placeholder="Write some grateful comment here"
        class="form-control"
        required
      ></textarea>
      <div class="valid-feedback">Thanks for submitting the review üòç</div>
      <div class="invalid-feedback">Please enter a valid review</div>
    </div>

    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <% } %>
  <hr />
  <p><b>Here are the reviews !</b></p>
  <div class="row">
    <% for (let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <b>Review by: </b>
            <i>
              <% if (review.author) { %> <%= review.author.username %> <% } else
              { %> Unknown User <% } %>
            </i>
          </h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> ‚≠ê</p>
        </div>
      </div>
      <form
        class="mb-3 mt-2"
        method="post"
        action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
      >
        <button class="btn btn-sm btn-dark">DELETE</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
