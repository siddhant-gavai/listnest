<% layout('/layouts/boilerplate') -%>
<style>
  #filters {
    display: flex;
    gap: 20px;
    padding: 15px;
    overflow-x: auto;
    white-space: nowrap;
    font-size: 0.6rem;
    align-items: center; /* Align all items including switch */
  }

  .filter {
    text-align: center;
    font-size: 0.75rem;
    color: #555;
    cursor: pointer;
    min-width: 70px;
  }

  .filter i {
    font-size: 0.8rem;
    margin-bottom: 5px;
    display: block;
    opacity: 0.7;
  }

  .filter:hover {
    color: #ff385c;
    opacity: 1;
  }

  .tax-toggle {
    margin-left: auto;
    display: flex;
    align-items: center;
    font-size: 0.85rem;
  }

  .form-check-input {
    margin-right: 5px;
  }
  .taxPrice {
    display: none;
  }
  .tax-toggle {
    display: flex;
    align-items: center;
    gap: 8px;
    border: 1px solid grey;
    padding: 10px 18px;
    background-color: #f8f9fa;
    border-radius: 20px;
    font-size: 0.95rem;
    color: #333;
    white-space: nowrap;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }
</style>

<div id="filters">
  <div class="filter"><i class="fas fa-tractor"></i><br />Farms</div>
  <div class="filter"><i class="fas fa-bed"></i><br />Rooms</div>
  <div class="filter"><i class="fas fa-image"></i><br />Amazing views</div>
  <div class="filter"><i class="fas fa-city"></i><br />Iconic cities</div>
  <div class="filter"><i class="fas fa-mountain"></i><br />Mountains</div>
  <div class="filter"><i class="fas fa-water"></i><br />Surfing</div>
  <div class="filter">
    <i class="fas fa-swimming-pool"></i><br />Amazing pools
  </div>
  <div class="filter"><i class="fas fa-umbrella-beach"></i><br />Beach</div>
  <div class="filter"><i class="fas fa-home"></i><br />Cabins</div>
  <div class="filter"><i class="fas fa-bolt"></i><br />OMG!</div>
  <div class="filter"><i class="fas fa-water"></i><br />Lakefront</div>

  <div class="tax-toggle ms-auto">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Show Price With Tax
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings ){ %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card listing-card">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> Night
          <i class="taxPrice"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("taxPrice");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
